@require 'lib'

mason-editor
	display block

#outContainer
	display flex
	flex-direction row
	background azure
#status
	flex-basis 2em
	text-align center
#out
	flex-basis auto
#out .warning
	color crimson
#out .error
	color firebrick
#out .span
	font-weight bold
	color seagreen
#out .code
	font-weight bold
	color indigo

#statusIcon
	margin 0.25em
	font-size 1.5em
#statusIcon.fa-check
	color chartreuse
#statusIcon.fa-exclamation
	color tomato
#statusIcon.fa-refresh
	color cornflowerBlue
	cursor pointer

radius = 2em

.CodeMirror
	height 100%
#ms .CodeMirror
	font-size 14px
	border-radius-top radius
#js .CodeMirror
	font-size 12px

#js
	border-radius-bottom radius
	overflow hidden
	// mason-editor.js expands the height when hovered over.
	max-height 0.5em
	transition max-height 1s
